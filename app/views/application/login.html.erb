<body class="page page-login">
<div id="content">
  <div class="container"> 
    <!-- Login form -->
    <form action="/sign_in" method= "post" class="form-login form-wrapper form-narrow" />
      <h3 class="title-divider"><span>Login</span> <small>Not signed up? <a href="/signup">Sign up here</a>.</small></h3>
      <input type="email" name="email"class="input-block-level" placeholder="Email address" required/>
      <input type="password" name= "password"class="input-block-level" placeholder="Password" required/>
